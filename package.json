{
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "stylelint": "^8.4.0",
    "stylelint-order": "^0.8.0"
  },
  "scripts": {
    "start": "node index.js"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": { "browser": true }
  },
  "stylelint": {
    "plugins": ["stylelint-order"],
    "rules": {
      "order/properties-order": [
        "list-style-type",
        "overflow",
        "overflow-y",
        "visibility",
        "position",
        "top",
        "left",
        "width",
        "max-width",
        "height",
        "margin",
        "margin-top",
        "margin-right",
        "margin-left",
        "padding",
        "padding-right",
        "padding-left",
        "border",
        "border-color",
        "border-width",
        "background-color",
        "object-fit",
        "object-position",
        "outline-style",
        "outline-offset",
        "outline-width",
        "color",
        "font",
        "font-size",
        "font-weight",
        "line-height",
        "text-align",
        "text-overflow",
        "white-space",
        "animation",
        "transform"
      ]
    }
  }
}
